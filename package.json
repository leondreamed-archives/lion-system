{
	"name": "lion-system",
	"version": "1.0.9",
	"main": "index.js",
	"type": "module",
	"license": "MIT",
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"scripts": {
		"release": "lionp",
		"build": "node-ts ./scripts/build.ts",
		"prepare": "simple-git-hooks",
		"start": "node-ts ./src/index.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@leonzalion/configs": "^1.0.72",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.21",
		"desm": "^1.2.0",
		"eslint": "^8.10.0",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.4",
		"lionp": "^1.0.19",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"sync-index": "^1.0.12",
		"ts-jest": "^27.1.3",
		"ts-jest-resolver": "^2.0.0",
		"tsc-alias": "^1.6.3",
		"tsm": "^2.2.1",
		"typescript": "^4.5.5"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec node-ts ./scripts/hooks/pre-commit.ts",
		"pre-push": "pnpm exec node-ts ./scripts/hooks/pre-push.ts",
		"commit-msg": "pnpm exec node-ts ./scripts/hooks/commit-msg.ts $@"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"publishConfig": {
		"directory": "dist"
	},
	"dependencies": {
		"execa": "^6.1.0",
		"pkg-up": "^4.0.0"
	}
}
